<header class="header">
    {{> logo}}

    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<main class="main">
    <img src="{{image}}" alt="Image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{description}}</p>
        <a href="{{href}}" class="main_button">{{button}}</a>
    </div>
</main>
{{/with}}


<div class="row featured">
    {{#each featured}}
    <div class="col-4">

        <img src="{{photo}}" alt="Image" class="feature_icon">

        <div class="featured_item">
            <h2 class="featured_title">{{heading}}</h2>
            <p class="featured_info">{{info}}</p>
            <a href="{{linkUrl}}" class="featured_link">{{linkText}}</a>
        </div>
    </div>
    {{/each}}
</div>

<div class="actions">
    {{#each actions}}
    <div class="action_content">
        <h3 class="action_title">{{heading}}</h3>
        <a href="{{url}}" class="button action_button">{{text}}</a>
    </div>
    {{/each}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>