<header class="header">
    {{> logo data="B"}}

    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info_content">
        <h1 class="title">{{title}}</h1>
        <p class="info_desc">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}" />
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>

        {{> divider}}
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

{{#with updates}}
<div class="updates">
    <h3 class="updates_title">{{title}}</h3>

    {{#each list}}
    <div class="upd">
        <div class="upd_image">
            <img src="/fav/favicon-32x32.png" alt="Image">
        </div>
        <div class="upd_content">
            <strong class="upd_nickname">@{{nickname}}</strong>
            <p class="upd_text">{{description}}</p>
        </div>
    </div>
    {{/each}}

    <a href="{{show_all.url}}" class="upd_link">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="expirience">
    <h2 class="expirience_title">{{title}}</h2>

    <div class="expirience_cards">
        {{#each list}}
        <div>
            <strong>{{name}}</strong>
            <p>{{details}}</p>
        </div>
        {{/each}}
    </div>
</div>
{{/with}}

<footer class="footer">
    <div>
        {{> logo data="B"}}
        <span class="footer_cooyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>